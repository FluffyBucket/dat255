<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_time_setup_basics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.chalmers.cid.activities.FirstTimeSetupBasicsActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/basics_page_number">
            android:stretchColumns="1"

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:background="@drawable/ic_person" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/basicsNameEditText"
                    android:hint="Name/Nickname"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                    <!--android:text="@{user.name}"-->
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:minWidth="48dp"
                    android:minHeight="48dp"


                    android:background="@drawable/ic_age" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:hint="Year of birth"
                    android:id="@+id/basicsAgeEditText"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                    <!--android:text="@{user.age}"-->
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:background="@drawable/ic_phone"
                    android:layout_column="0" />

                <EditText
                    android:ems="10"
                    android:inputType="phone"
                    android:id="@+id/basicsPhoneEditText"
                    android:hint="07XX XXXXXX"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_column="1"/>
                    <!--android:text="@{user.phone}"-->
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:background="@drawable/ic_mail"
                    android:layout_column="0" />

                <EditText
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/basicsEmailEditText"
                    android:hint="Name@Domain.xxx"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                    <!--android:text="@{user.email}"-->
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:background="@drawable/ic_facebook"
                    android:layout_column="0" />

                <EditText
                    android:inputType="textUri"
                    android:ems="10"
                    android:id="@+id/basicsFacebookEditText"
                    android:hint="Facebook.com/Username"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                    <!--android:text="@{user.facebook}"-->
            </TableRow>

        </TableLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_apache"
                android:id="@+id/basicsGenderMaleButton"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:adjustViewBounds="true"
                android:clickable="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_apache"
                android:id="@+id/basicsGenderFemaleButton"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:adjustViewBounds="true"
                android:clickable="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_apache"
                android:id="@+id/basicsGenderNeutralButton"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:adjustViewBounds="true"
                android:clickable="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_apache"
                android:id="@+id/basicsGenderApacheButton"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:adjustViewBounds="true"
                android:clickable="true" />
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:text="2/4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/basics_page_number"
        android:padding="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/role_button_next"
        android:layout_alignBaseline="@+id/basics_page_number"
        android:layout_alignBottom="@+id/basics_page_number"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_arrow_right"
        android:minWidth="48dip"
        android:onClick="nextActivity"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/role_button_cancel"
        android:background="@drawable/ic_arrow_left"
        android:minWidth="48dip"
        android:layout_alignBaseline="@+id/basics_page_number"
        android:layout_alignBottom="@+id/basics_page_number"
        android:layout_alignParentStart="true"
        android:onClick="previousActivity"/>

</RelativeLayout>
